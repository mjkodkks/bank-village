{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../views/**/*.hbs",
        "outDir": "dist/views"
      },
      {
        "include": "../public/**/*.{png, jpg}",
        "outDir": "dist/public"
      },
      {
        "include": "../assets/**/*",
        "outDir": "dist/assets"
      }
    ],
    "watchAssets": true
  }
}
